@model List<Room>
@{
  ViewData["Title"] = "Кабинеты"; 
  ViewData["Role"] = "Manager";
  ViewData["IsRegister"] = "1";
  Layout = "~/Views/Shared/_Layout.cshtml";  
}

<p>
    <h2 class="text-info">@ViewData["Title"]</h2>
</p>

<table class="table"> 
    <tr>
        <th>Адресс</th>
        <th>Номер телефона</th>
        <th>Количество рабочих мест</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Adress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CountWorkPlace)
            </td>
            <td>
            <a asp-action="DetailsRoom" asp-route-id="@item.RoomId">Просмотр</a> |
            <a asp-action="EditRoom" asp-route-id="@item.RoomId">Изменить</a> |
            <a asp-action="DeleteRoom" asp-route-id="@item.RoomId">Удалить</a>
            </td>
        </tr>
    } 
</table>
<br/>
@if (ViewBag.Error != null)
{
<div class="row">
    <div class="col-12">
        <div class="alert alert-warning" role="alert">
            @ViewBag.Error
        </div>
    </div>
</div>
}
<br />
<p>
    <form asp-controller="Manager" asp-action="AddRoom" method="get">
        <button type="submit" class="btn btn-outline-primary" formmethod="get">Добавить кабинет</button>
    </form>
</p>
<br />