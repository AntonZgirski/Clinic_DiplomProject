                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.NumberDocument)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.NumberDocument)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Gender)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Gender)
                    </dd>
