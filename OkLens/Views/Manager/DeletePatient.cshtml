<br/>
<div class="col-12">
    <div class="container">
        <div class="row">
            <div class="col-1">
                <div class="form-group">
                    <a asp-action="DeletePatientAction" asp-route-id="@Model.PatientId" class="btn btn-outline-primary">Удалить</a>
                </div>
            </div>
            <div class="col-1">
                <div class="form-group">   
                    <a asp-action="PatientList" class="btn btn-outline-primary">Назад</a>
                </div>
            </div>
        </div>
    </div>
