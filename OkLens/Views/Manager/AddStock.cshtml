@model OkLens.Models.Stock
@{
  ViewData["Title"] = "Новый товар";
}
<body>
    <header>
        <p>
            <h2 class="text-info">@ViewData["Title"]</h2>
        </p>        
        <br/>
        <div class="row">
            <div class="col-md-4">
                <form asp-action="AddStock">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input asp-for="Name" class="form-control" placeholder="Наименование"/>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <input asp-for="Descr" class="form-control" placeholder="Описание"/>
                        <span asp-validation-for="Descr" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <input asp-for="Count" class="form-control" placeholder="Количество"/>
                        <span asp-validation-for="Count" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <input type="text" asp-for="Price" class="form-control" placeholder="Стоимость"/>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <input type="submit" value="Добавить" class="btn btn-outline-primary" />
                    </div>
                </form>
            </div>
        </div>
        <br />
        <div>
        <a asp-action="StockList" class="btn btn-outline-primary">Назад</a>
        </div>

    </header>
</body>

@section Scripts {
    <script>
    // переопределение валидации на стороне клиента
    $.validator.methods.range = function (value, element, param) {
        var globalizedValue = value.replace(",", ".");
        return this.optional(element) || (globalizedValue >= param[0] && globalizedValue <= param[1]);
    }
 
    $.validator.methods.number = function (value, element) {
        return this.optional(element) || /^-?(?:\d+|\d{1,3}(?:[\s\.,]\d{3})+)(?:[\.,]\d+)?$/.test(value);
    }
    </script>
}