        <div class="container">
            <div class="row">
                <div class="col-4">
                    <div class="form-group">                            
                        <textarea asp-for="Diagnosis" class="form-control" placeholder="Диагноз" rows="3"></textarea>
                        <span asp-validation-for="Diagnosis" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <textarea asp-for="Recommend" class="form-control" placeholder="Рекомендации" rows="3"></textarea>
                        <span asp-validation-for="Recommend" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <br />
    <div class="form-group">
        <input type="submit" value="Соранить" class="btn btn-outline-primary" />
    </div>
    <br />
    <div>
        <a asp-action="ReceptionList" class="btn btn-outline-primary">Назад</a>
    </div>
</form> 

@section Scripts {
    <script>
    // переопределение валидации на стороне клиента
    $.validator.methods.range = function (value, element, param) {
        var globalizedValue = value.replace(",", ".");
        return this.optional(element) || (globalizedValue >= param[0] && globalizedValue <= param[1]);
    }
 
    $.validator.methods.number = function (value, element) {
        return this.optional(element) || /^-?(?:\d+|\d{1,3}(?:[\s\.,]\d{3})+)(?:[\.,]\d+)?$/.test(value);
    }
    </script>
}