                <div class="col-4">
                    <div class="form-group">                            
                        <input asp-for="LeadingEye" class="form-control" placeholder="Ведущий глаз"/>
                        <span asp-validation-for="LeadingEye" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">                            
                        <input asp-for="PhoriaUp" class="form-control" placeholder="Фория вблизи"/>
                        <span asp-validation-for="PhoriaUp" class="text-danger"></span>
