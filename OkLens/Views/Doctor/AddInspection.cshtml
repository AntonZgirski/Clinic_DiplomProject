                    </div>
                    <br />
                    <div class="form-group">                            
                        <input asp-for="Lens" class="form-control" placeholder="Хрусталик"/>
                        <span asp-validation-for="Lens" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <div class="col-12">
        <div class="container">
            <div class="row">
                <div class="col-4">
                    <div class="form-group">                            
                        <textarea asp-for="CommentBms" class="form-control" placeholder="Комментарий" rows="3"></textarea>
                        <span asp-validation-for="CommentBms" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <br />
    <hr />
