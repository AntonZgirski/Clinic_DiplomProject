@*using MultipleModelInOneView*@
@model EditEmployeeViewModel

@{
    ViewData["Title"] = "Подрабности";
}

<h1  class="text-info">Редактировать</h1>

<h4  class="text-info">Сотрудник</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditEmployee">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.Employee.EmployeeId" />
            <div class="form-group">
                <label asp-for="@Model.Employee.Lname" class="control-label"></label>
                <input asp-for="@Model.Employee.Lname" class="form-control" name="lname"/>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Employee.Fname" class="control-label"></label>
                <input asp-for="@Model.Employee.Fname" class="form-control" name="fname"/>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Employee.Sname" class="control-label"></label>
                <input asp-for="@Model.Employee.Sname" class="form-control" name="sname"/>
            </div>
            <div class="form-group">
            <label asp-for="@Model.Employee.Role.RoleName" class="control-label"></label>
            <select class="form-control" id="role" name="role" required="required">
                <option value="@Model.Employee.RoleId">@Model.Employee.Role.RoleName</option>
            @foreach(var m in Model.Roles)
            {
                <option value=@m.RoleId>@m.RoleName</option>                  
            }
            </select>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Employee.DateBirthday" class="control-label"></label>  
                <input asp-for="@Model.Employee.DateBirthday" type="date" class="form-control" name="datebir"/>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Employee.Category" class="control-label"></label>
                <input asp-for="@Model.Employee.Category" class="form-control" name="category"/>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Employee.Login" class="control-label"></label>
                <input asp-for="@Model.Employee.Login" class="form-control" name="login"/>
            </div>
            <br/>
            @if (ViewBag.Error != null)
            {
            <div class="row">
                <div class="col-12">
                <div class="alert alert-warning" role="alert">
                    @ViewBag.Error
                </div>
                </div>
            </div>
            }  
            <br/>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br/>
<div>
    <a asp-action="Employee">Назад</a>
</div>